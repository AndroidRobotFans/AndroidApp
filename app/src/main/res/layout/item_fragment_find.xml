<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_fragment_find_image_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/item_fragment_find_textview_special"
            style="@style/FindFragmentItem"
            android:text="美食晒出来"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_fragment_find_textview_describe"
            style="@style/FindFragmentItem"
            android:text="我只想安静的做一个吃货"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_fragment_find_textview_info"
            style="@style/FindFragmentItem"
            android:text="我只想安静的做一个吃货"
            android:textSize="12sp"
            android:textColor="#7b7a7a"/>

    </LinearLayout>

    <Button
        android:id="@+id/item_fragment_find_button_subscriber"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:text="订阅"/>

</LinearLayout>
